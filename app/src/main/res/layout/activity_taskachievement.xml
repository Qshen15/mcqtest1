<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".PostProblemActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">
        <ImageView
            android:id="@+id/fanhui_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/fanhui"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:text="任务完成"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center"
            android:singleLine="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="姓       名："
            android:textSize="22sp"
            android:textColor="#000000"
            android:padding="2dp"/>
        <EditText
            android:id="@+id/PName"
            android:layout_width="202dp"
            android:layout_height="35dp"
            android:padding="2dp"
            android:text="李鹏"
            android:textSize="22sp"
            android:layout_toRightOf="@+id/name"
            android:textColor="#000000"
            android:background="@drawable/bg_et_1"/>
        <TextView
            android:id="@+id/gonghao"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="工       号："
            android:textSize="22sp"
            android:padding="2dp"
            android:textColor="#000000"
            android:layout_below="@+id/name"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/P"
            android:layout_width="202dp"
            android:layout_height="35dp"
            android:text=" Z158"
            android:textSize="22sp"
            android:padding="2dp"
            android:layout_toRightOf="@+id/gonghao"
            android:layout_below="@+id/PName"
            android:textColor="#000000"
            android:background="@drawable/bg_et_1"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/renwuleixing"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="任务类型："
            android:textSize="22sp"
            android:padding="2dp"
            android:textColor="#000000"
            android:layout_below="@+id/gonghao"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/type"
            android:layout_width="205dp"
            android:layout_height="35dp"
            android:text="调配任务"
            android:textSize="22sp"
            android:padding="2dp"
            android:layout_toRightOf="@+id/renwuleixing"
            android:layout_below="@+id/P"
            android:textColor="#000000"
            android:background="@drawable/bg_et_1"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/renwuzhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="任务状态："
            android:textSize="22sp"
            android:padding="2dp"
            android:textColor="#000000"
            android:layout_below="@+id/renwuleixing"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/state"
            android:layout_width="205dp"
            android:layout_height="35dp"
            android:text="已完成"
            android:textSize="22sp"
            android:padding="2dp"
            android:layout_toRightOf="@+id/renwuzhuangtai"
            android:layout_below="@+id/type"
            android:textColor="#000000"
            android:background="@drawable/bg_et_1"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/lianxifangshi"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="联系方式："
            android:textSize="22sp"
            android:padding="2dp"
            android:textColor="#000000"
            android:layout_below="@+id/renwuzhuangtai"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/proPhone"
            android:layout_width="205dp"
            android:layout_height="35dp"
            android:text=" 17861826312"
            android:textSize="22sp"
            android:padding="2dp"
            android:layout_toRightOf="@+id/lianxifangshi"
            android:layout_below="@+id/state"
            android:textColor="#000000"
            android:background="@drawable/bg_et_1"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="任务反馈："
            android:textSize="22sp"
            android:padding="2dp"
            android:textColor="#000000" />
        <EditText
            android:id="@+id/proBack"
            android:layout_width="320dp"
            android:padding="5dp"
            android:layout_height="200dp"
            android:background="@drawable/bg_et_1"
            android:layout_gravity="center"
            android:singleLine="false"
            android:hint="请输入您的反馈："
            android:textColor="#000000"
            android:textSize="20sp"
            android:gravity="left" />


    </LinearLayout>

    <Button
        android:id="@+id/postPro"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_btn4"
        android:layout_gravity="center"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_marginTop="50dp"/>


</LinearLayout>