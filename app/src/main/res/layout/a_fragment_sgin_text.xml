<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/xingkong"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        />
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:id="@+id/info"
        android:layout_height="220dp">
        <TextView
            android:id="@+id/info_time"
            android:textSize="55sp"
            android:text="24:00"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/info_time"
            android:id="@+id/info_date"
            android:textSize="20sp"
            android:text="2019年5月20日"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/info_1"
            android:layout_below="@+id/info_date"
            android:background="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:layout_below="@+id/info_1"
            android:maxLines="2"
            android:id="@+id/info_loaction"
            android:textSize="15sp"
            android:text="签到地点: 聊城大学环境与规划学院4号实验楼"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/info_loaction"
            android:maxLines="1"
            android:id="@+id/info_tip"
            android:textSize="15sp"
            android:text="签到地点: 聊城大学环境与规划学院4号实验楼"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_height="wrap_content"
            tools:ignore="EllipsizeMaxLines" />

    </RelativeLayout>

</RelativeLayout>
